# Environment Configuration for TNT Vehicle Intelligence Platform

# Application
APP_NAME=TNT Vehicle Intelligence Platform
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://tnt_user:tnt_password_2026@postgres:5432/tnt_vehicle_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2
REDIS_QUEUE_DB=3

# JWT Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production-tnt2026
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Security
API_RATE_LIMIT=100  # requests per minute
PASSWORD_MIN_LENGTH=8

# Motion Detection Service
MOTION_DETECTION_FPS=30
MOTION_THRESHOLD=50  # 0-100 sensitivity
BACKGROUND_SUBTRACTOR=MOG2
MIN_CONTOUR_AREA=500

# YOLO Configuration
YOLO_MODEL=yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.4
YOLO_CLASSES=person,car,truck,bus,motorcycle,bicycle

# Alert Configuration
ALERT_COOLDOWN_SECONDS=3
ALERT_DURATION_SECONDS=5
ALERT_SEVERITY_LEVELS=LOW,MEDIUM,HIGH,CRITICAL
MAX_ALERTS_PER_VEHICLE_PER_HOUR=100

# Vehicle Telematics (Mock Data)
TELEMETRY_UPDATE_INTERVAL=1  # seconds
MAX_VEHICLE_SPEED=120  # km/h
SIMULATE_CAN_BUS=True

# Data Retention
DETECTION_RETENTION_DAYS=90
ALERT_RETENTION_DAYS=365
LOG_RETENTION_DAYS=30

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,bmp

# Monitoring & Metrics
ENABLE_METRICS=True
METRICS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json

# WebSocket Configuration
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10
WS_MAX_MESSAGE_SIZE=10485760  # 10MB

# Kafka (if using)
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_DETECTIONS=vehicle-detections
KAFKA_TOPIC_ALERTS=vehicle-alerts

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=alerts@tntsurveillance.com
SMTP_PASSWORD=change-me
SMTP_FROM=TNT Surveillance <alerts@tntsurveillance.com>

# Deployment
WORKERS=4
RELOAD=False

